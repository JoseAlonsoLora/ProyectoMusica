<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane id="AnchorPane" fx:id="pnlTarjeta" prefHeight="100.0" prefWidth="350.0" stylesheets="@../styles/panelCss.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controladores.TarjetaCancionController">
    <cursor>
        <Cursor fx:constant="HAND" />
    </cursor>
    <children>
        <StackPane style="-fx-background-color: #D1F2EB;">
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <Label fx:id="lblNombreCancion" text="Label">
                  <GridPane.margin>
                     <Insets left="10.0" />
                  </GridPane.margin>
                  <font>
                     <Font name="System Bold" size="13.0" />
                  </font></Label>
                    <Label fx:id="lblArtista" text="Label" GridPane.rowIndex="1">
                  <GridPane.margin>
                     <Insets left="10.0" />
                  </GridPane.margin></Label>
                    <Label fx:id="lblAlbum" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                </children>
            </GridPane>
        </StackPane>
    </children>
    <padding>
        <Insets left="15.0" />
    </padding>
</StackPane>
